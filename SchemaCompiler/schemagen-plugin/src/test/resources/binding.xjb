<jxb:bindings xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:jxb="http://java.sun.com/xml/ns/jaxb" version="2.1">
  <jxb:bindings schemaLocation="advanced.xsd" node="/xs:schema/xs:complexType[@name='User']/xs:all">
      <jxb:bindings node="/xs:schema/xs:complexType[@name='User']/xs:all/xs:element[@name='born']">
            <jxb:property>
                <jxb:javadoc>DateTime format 'yyyy-MM-ddTHH:mm:ss'</jxb:javadoc>
            </jxb:property>
      </jxb:bindings>
      <jxb:bindings node="/xs:schema/xs:complexType[@name='User']/xs:all/xs:element[@name='died']">
            <jxb:property>
                <jxb:javadoc>Date format 'yyyy-MM-dd'</jxb:javadoc>
            </jxb:property>
      </jxb:bindings>
  </jxb:bindings>
</jxb:bindings>